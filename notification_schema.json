{
	"$id": "<url>",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Notification Schema",
	"description": "<description>",
	"type": "object",
	"properties": {
        "organization": {
            "type": "object",
            "additionalProperties": true
        },
        "name": {
          "type": "object",
          "properties": {
            "fi": {
                "type": "string"
            },
            "sv": {
                "type": "string"
            },
            "en": {
                "type": "string"
            }
          },
          "required": ["fi"]
        },
        "location": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": {
                "type": "number"
            } 
        },
        "description": {
            "type": "object",
            "properties": {
                "short": {
                    "type": "object",
                    "properties": {
                        "fi": {
                            "type": "string",
                            "maxLength": 150
                        },
                        "sv": {
                            "type": "string",
                            "maxLength": 150
                        },
                        "en": {
                            "type": "string",
                            "maxLength": 150
                        }
                    },
                    "required": ["fi"]
                },
                "long": {
                    "type": "object",
                    "properties": {
                        "fi": {
                            "type": "string",
                            "minLength": 120,
                            "maxLength": 4000
                        },
                        "sv": {
                            "type": "string",
                            "minLength": 120,
                            "maxLength": 4000
                        },
                        "en": {
                            "type": "string",
                            "minLength": 120,
                            "maxLength": 4000
                        }
                    },
                    "required": ["fi"]
                }
            },
            "required": ["short", "long"]        
        },
        "address": {
            "type": "object",
            "properties": {
                "fi": {
                    "type": "object",
                    "properties": {
                        "street": {
                            "type": "string"
                        },
                        "postal_code": {
                            "type": "string",
                            "pattern": "^[0-9][0-9][0-9][0-9][0-9]$"
                        },
                        "post_office": {
                            "type": "string"
                        }
                    },
                    "required": ["street", "postal_code", "post_office"]
                },
                "sv": {
                    "type": "object",
                    "properties": {
                        "street": {
                            "type": "string"
                        },
                        "postal_code": {
                            "type": "string",
                            "pattern": "^[0-9][0-9][0-9][0-9][0-9]$"
                        },
                        "post_office": {
                            "type": "string"
                        }
                    },
                    "required": ["street", "postal_code", "post_office"]
                }
            },
            "required": ["fi"]
        },
        "phone": {
            "type": "string",
            "pattern": "^\\+?[0-9- ]+$"
        },
        "email": {
            "type": "string",
            "format": "email"
        },
        "website": {
            "type": "object",
            "properties": {
                "fi": {
                   "oneOf": [
                        {
                            "type": "string",
                            "format": "uri"
                        },
                        {
                            "type": "string",
                            "maxLength": 0
                        }                  
                    ]
                },
                "sv": {
                    "oneOf": [
                        {
                            "type": "string",
                            "format": "uri"
                        },
                        {
                            "type": "string",
                            "maxLength": 0
                        }                  
                    ]
                },
                "en": {
                    "oneOf": [
                        {
                            "type": "string",
                            "format": "uri"
                        },
                        {
                            "type": "string",
                            "maxLength": 0
                        }                  
                    ]
                }
            },
            "required": ["fi"]
        },
        "images": {
            "type": "object",
            "additionalProperties": true
        },
        "opening_times": {
            "type": "object",
            "additionalProperties": true
        },
        "price": {
            "type": "object",
            "properties": {
                "fi": {
                    "type": "string",
                    "maxLength": 500
                },
                "sv": {
                    "type": "string",
                    "maxLength": 500
                },
                "en": {
                    "type": "string",
                    "maxLength": 500
                }
          },
          "required": ["fi"]
        },
        "payment_options": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    }
                }
            }
        },
        "ontologywords": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {"type": "number"},
                    "ontologyword": {
                        "type": "object",
                        "properties": {
                            "fi": {"type": "string"},
                            "sv": {"type": "string"},
                            "en": {"type": "string"}
                        },
                        "required": ["fi", "sv", "en"]
                    },
                    "can_add_schoolyear": {"type": "boolean"},
                    "can_add_clarification": {"type": "boolean"}    
                },
                "required": ["id", "ontologyword", "can_add_schoolyear", "can_add_clarification"]
            }
        },
        "comments": {
            "type": "string"
        }
    },
	"required": [
        "organization",
        "name",
        "location",
        "description",
        "address",
        "phone",
        "email",
        "website",
        "images",
        "opening_times",
        "price",
        "payment_options",
        "ontologywords",
        "comments"
    ]
}