{
	"$id": "<url>",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Change Request Schema",
	"description": "<description>",
	"type": "object",
	"properties": {
        "target": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "number"
                },
                "revision": {
                    "type": "number"
                }
            },
            "required": ["id", "revision"]
        },
        "change_type": {
            "type": "string",
            "enum": ["change", "delete"]
        },
        "description": {
            "type": "string",
            "maxLength": 400
        },
        "contact_details": {
            "type": "string",
            "maxLength": 400,
            "default": ""
        }
    },
	"required": [
        "target",
        "change_type",
        "description"
    ]
}